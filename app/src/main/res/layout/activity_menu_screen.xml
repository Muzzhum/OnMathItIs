<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuScreenActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65sp"
        android:text="Largest Palindrome Product of Two Numbers"
        android:id="@+id/palindromeProduct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65sp"
        android:text="Prime Checker"
        android:id="@+id/primeChecker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/palindromeProduct"
        android:layout_alignRight="@+id/palindromeProduct"
        android:layout_alignEnd="@+id/palindromeProduct" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="65sp"
        android:text="Collatz Machine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/primeChecker"
        android:id="@+id/collatzMachine"
        android:layout_alignRight="@+id/primeChecker"
        android:layout_alignEnd="@+id/primeChecker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65sp"
        android:text="Longest Collatz Sequence Up to A Number"
        android:id="@+id/longestCollatz"
        android:layout_below="@+id/collatzMachine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
